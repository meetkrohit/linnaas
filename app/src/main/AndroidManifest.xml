<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gsatechworld.linnaas">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".RecitationActivity"></activity>
        <activity android:name=".views.ui.activity.LoginActivity" />
        <activity android:name=".views.ui.activity.SearchActivity" />
        <activity android:name=".views.ui.activity.WalletActivity" />
        <activity android:name=".views.ui.activity.HomeActivity" />
        <activity android:name=".views.ui.activity.ProfileActivity" />
        <activity android:name=".views.ui.activity.VerifyOtpActivity" />
        <activity
            android:name=".views.ui.activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".TimerService"/>

    </application>

</manifest>