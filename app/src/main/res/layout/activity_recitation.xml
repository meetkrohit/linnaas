<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:timer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splas_lin_naas"
    tools:context=".RecitationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:src="@drawable/previous"
            android:layout_margin="20dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/verse_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subhanallah wa Bilahamdillah"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/size_20"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        />

    <LinearLayout
        android:id="@+id/tap_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <TextView
        android:id="@+id/current_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/size_40"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/hr_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/min_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/sec_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="16dp"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/total_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/size_16"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_10"
        />
        <ProgressBar
            android:id="@+id/circularProgressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/size_100"
            android:layout_height="@dimen/size_100"
            android:layout_gravity="center_horizontal"
            android:indeterminate="false"
            android:max="10"
            android:progress="0"
            android:layout_centerInParent="true"
            android:progressDrawable="@drawable/circlebardesign"
            android:secondaryProgress="100" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_40"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/start_auto_count"
                android:layout_width="40dp"
                android:layout_height="@dimen/size_40"
                android:src="@drawable/autoplay_1"
                android:background="@color/colorPrimaryDark"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_marginRight="@dimen/size_16"
            >
            <ImageView
                android:id="@+id/fill_auto_count"
                android:layout_width="40dp"
                android:layout_height="@dimen/size_40"
                android:src="@drawable/tracker"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/size_60"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            >
        <ImageView
            android:id="@+id/reset_icon"
            android:layout_width="40dp"
            android:layout_height="@dimen/size_40"
            android:src="@drawable/reset_2"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/play_icon"
                android:layout_width="40dp"
                android:layout_height="@dimen/size_40"
                android:src="@drawable/pause"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/stop_icon"
                android:layout_width="40dp"
                android:layout_height="@dimen/size_40"
                android:src="@drawable/stop_1"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>